yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# custom config

## setting
yabai -m config \
focus_follows_mouse autofocus \
mouse_follows_focus on \
window_placement second_child \
window_shadow float \
window_opacity on \
active_window_opacity 0.9 \
normal_window_opacity 0.9 \
layout bsp \

## rules
yabai -m rule --add app="^(iPhone Mirroring|Microsoft Teams|Notes|Activity Monitor|Finder|System Settings)$" manage=off sub-layer=below
yabai -m rule --add title=".*Setting.*" manage=off
yabai -m rule --add app="^Amazon Q$" manage=off sub-layer=above
# yabai -m rule --add subrole="AXDialog" opacity=1.0

