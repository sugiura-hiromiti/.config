yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

yabai -m config \
focus_follows_mouse autofocus \
window_placement first_child \
window_shadow off \
window_opacity on \
active_window_opacity 0.9 \
normal_window_opacity 0.9 \
layout bsp \

# rules
yabai -m rule --add app="^(Fig|System Settings|Notes|Activity Monitor|Finder|Karabiner-Elements)$" manage=off
yabai -m rule --add app="^(Fig)$" sticky=on layer=above

